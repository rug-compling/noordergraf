
:PeriodShape a sh:NodeShape ;
  sh:closed true ;
  # je kunt hier geen sh:targetClass gebruiken, omdat die ook matcht met subclasses van Period
  sh:targetObjectsOf :period ;
  sh:class :Period ;
  sh:property [
    sh:path rdf:type ;
    sh:minCount 1;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :duration ;
    sh:datatype xsd:duration ;
    sh:minCount 1;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :text ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] ;
  sh:property [
    sh:path :comment ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] .

