:QuoteShape a sh:NodeShape ;
  sh:targetClass :Quote ;
  sh:class :Quote ;
  sh:closed true ;
  sh:property [
    sh:path rdf:type ;
    sh:minCount 1 ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :text ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] ;
  sh:property [
    sh:path :reference ;
    sh:class :ReferenceClass ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :quoteSubject ;
    sh:class :Person ;
  ] ;
  sh:property [
    sh:path :comment ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] .
