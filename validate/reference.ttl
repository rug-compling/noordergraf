
:ReferenceShape a sh:NodeShape ;
  sh:targetClass :Reference ;
  sh:class :Reference ;
  sh:closed false ;  # ivm subclasses
  sh:property [
    sh:path rdf:type ;
    sh:minCount 1 ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :comment ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] .


