
:PersonShape a sh:NodeShape ;
  sh:closed true ;
  sh:targetClass :Person ;
  sh:class :Person ;
  sh:property [
    sh:path rdf:type ;
    sh:minCount 1;
    sh:maxCount 1;
  ] ;
  sh:property [
    sh:path :name ;
    sh:class :Name
  ] ;
  sh:property [
    sh:path :placeOfBirth ;
    sh:class :PlaceClass ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :placeOfDeath ;
    sh:class :PlaceClass ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :dateOfBirth ;
    sh:class :Date ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :dateOfDeath ;
    sh:class :Date ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :age ;
    sh:class :Age ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path :relation ;
    sh:class :RelationClass
  ] ;
  sh:property [
    sh:path :occupation ;
    sh:class :Occupation
  ] ;
  sh:property [
    sh:path :quantity ;
    sh:maxCount 1 ;
    sh:property [
      sh:class :Quantity ;
      sh:property [
        sh:path :number ;
        sh:maxCount 1 ;
        sh:datatype xsd:integer
      ]
    ]
  ] ;
  sh:property [
    sh:path :property ;
    sh:class :Decoration ;
    sh:property [
      sh:path :title ;
      sh:or (
        [ sh:datatype xsd:string ]
        [ sh:datatype rdf:langString ]
      ) ;
      sh:mincount 1 ;
      sh:maxcount 1
    ]
  ] ;
  sh:property [
    sh:path :location ;
    sh:class :PlaceClass ;
    sh:maxCount 1 ;
    sh:property :AnyText
  ] ;
  sh:property [
    sh:path :text ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] .
