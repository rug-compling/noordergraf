
:PlaceClassShape a sh:NodeShape ;
  sh:closed true ;
  sh:targetClass :PlaceClass ;
  sh:class :PlaceClass ;
  sh:property [
    sh:path rdf:type ;
    sh:minCount 1;
    sh:maxCount 1;
  ] ;
  sh:property [
    sh:path :place ;
    sh:class :Place ;
    sh:minCount 1 ;
    sh:maxCount 1
  ] ;
  sh:property [
    # als een exactere locatie bekend is dan :place
    sh:path :geo ;
    sh:class geo:Point ;
    sh:maxCount 1
  ] ;
  sh:property [
    # als een exactere locatie bekend is dan :place
    sh:path :nd ;
    sh:datatype ll: ;
    sh:pattern "^[-+][0-9]{2}\\.[0-9]{4}[-+][0-9]{3}\\.[0-9]{4}$" ;
    sh:maxCount 1
  ] ;
  sh:property [
    sh:path :partOf ;
    sh:class :PlaceClass
  ] ;
  sh:property [
    sh:path :text ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] ;
  sh:property [
    sh:path :comment ;
    sh:or (
      [ sh:datatype xsd:string ]
      [ sh:datatype rdf:langString ]
    )
  ] .

