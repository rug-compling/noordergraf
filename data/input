#!/bin/bash

set -e

. secret.sh

agtool load \
       --overwrite \
       --bulk \
       --duplicates delete \
       --automate-nd-datatype-mappings \
       --input trig \
       --optimize \
       --base-uri https://noordergraf.rug.nl/ \
       noordergraf \
       -

echo

python3 _bin/mkfti.py
_bin/chkll
_bin/chklocation
_bin/chktags
_bin/mkprops > ns.json
_bin/mkbibidx > bible/index.body.eng
_bin/mkbibidx -n > bible/index.body.nld
_bin/mksymidx > ../www/picto/index.body.eng
_bin/mksymidx -n > ../www/picto/index.body.nld

_bin/prefix2allegro.py > /home/p209327/opt/agraph/data/settings/default-namespaces
mkdir -p /home/p209327/opt/agraph/data/rootcatalog/noordergraf/namespaces
_bin/prefix2allegro.py > /home/p209327/opt/agraph/data/rootcatalog/noordergraf/namespaces/anonymous
_bin/prefix2allegro.py > /home/p209327/opt/agraph/data/rootcatalog/noordergraf/namespaces/peter

echo OK
echo
